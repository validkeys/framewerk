{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "composite": false,
    "incremental": false,
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*-test.ts",
    "src/contracts-test.ts",
    "src/monorepo-example.ts",
    "src/service-test.ts",
    "src/introspection-test.ts",
    "node_modules",
    "dist"
  ]
}
